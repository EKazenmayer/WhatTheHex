<script>
  function validate(target, base, inputs){
     var val =0;
     for(var i = 0; i < inputs.length-1; i+=2){
        val += Math.pow(base, inputs[i].value)*inputs[i+1].value;
    }
    if(val == target){
      if(window.confirm('Congrats! Continue to next module')){
         //smooth scroll
          
      }else{
        //stay
      } 
    }else{
      alert("Incorrect. Try again!");
    }
  }

  spectrumColor_A = $(flatSpectrum_a).spectrum({
  flat: true,
  showAlpha: true,
  allowAlpha: true,
  showPalette: true,
  showButtons: false,
  clickoutFiresChange: true
});

spectrumColor_B = $(flatSpectrum_b).spectrum({
  flat: true,
  showAlpha: true,
  allowAlpha: true,
  showPalette: true,
  showButtons: false,
  clickoutFiresChange: true
});

  $(flatSpectrum_a).on('move.spectrum', function(e, tinyColor) {
  var hexVal = tinyColor.toHexString();
  var color_a = document.getElementById('colorPickerA');
  color_a.style.backgroundColor = hexVal;

});


</script>
<head>
